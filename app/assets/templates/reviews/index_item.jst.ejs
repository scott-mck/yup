<div class="content-container">
  <input default="false" id="input-id" type="number" class="rating" min=0 max=5 step=0.5 data-size="xs" >
  <p class="context">
    <a href="#businesses/<%= business.get('id') %>">
      <%= business.get('name') %></a><br>
    <small>
      (<%= $.timeago(timeCreated) %>)
    </small>
  </p>
</div>

<div class="user-info">
  <% if (followed_user) { %>
    <span class="glyphicon glyphicon-ok-sign">followed</span><br>
  <% } %>
  <img class="user-image" src="<%= userImageUrl %>"><br>
  <a href="#users/<%= userId %>"><%= userName %></a>
</div>

<div class="review-info">
  <p><%= review.escape('excerpt') %></p>
</div>
