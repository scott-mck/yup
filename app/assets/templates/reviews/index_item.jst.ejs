<input default="false" id="input-id" type="number" class="rating" min=0 max=5 step=0.5 data-size="xs" >
<div class="user-info">
  <img class="user-image" src="<%= user.escape('image_url') %>"><br>
  <strong>
    <a href="#users/<%= user.get('id') %>">
      -<%= user.escape('first_name') %>
    </a>
  </strong>
</div>

<div class="review-info">
  <p class="context">
  <strong>
    <a href="#businesses/<%= business.get('id') %>"><%= business.escape('name') %></a>
  </strong> <br>
    <small>
      (<%= $.timeago(review.get('created_at')) %>)
    </small>
  </p>
  <p><%= review.escape('content') %></p>
</div>
