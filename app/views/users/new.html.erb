<div class="backdrop">
  <div class="sign-in popup">
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <ul class="errors">
          <li><%= error %></li>
        </ul>
      <% end %>
    <% end %>

    <h1>Sign Up!</h1>
    <br>

    <form class="auth col-md-4" action="<%= users_url %>" method="post">
      <%= auth_token %>

      <input class="form-control first-name" type="text" name="user[first_name]" id="first-name" placeholder="First Name">

      <input class="form-control last-name" type="text" name="user[last_name]" id="last-name" placeholder="Last Name">

      <input class="form-control" type="text" name="user[email]" id="email" placeholder="Email">

      <input class="form-control" type="password" name="user[password]" id="password" placeholder="Password">

      <input class="btn btn-success" type="submit" value="Sign up!">
    </form>

    <h3>Already have an account? <a href="<%= new_session_url %>">Log in!</a></h3>

  </div>
</div>
